<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5">

    <View
        android:id="@+id/manager_top_center_line_view"
        android:layout_width="@dimen/dm002"
        android:layout_height="@dimen/dm020"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm033"
        android:background="@color/color999999" />

    <TextView
        android:id="@+id/cloud_games_tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm100"
        android:clickable="true"
        android:paddingBottom="@dimen/dm028"
        android:paddingTop="@dimen/dm028"
        android:text="云适配游戏"
        android:textColor="@color/manager_top_bt_text_seletor"
        android:textSize="@dimen/dm024"
        android:textStyle="bold" />

    <View
        android:id="@+id/cloud_games_tab_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm004"
        android:layout_alignLeft="@id/cloud_games_tab_tv"
        android:layout_alignRight="@id/cloud_games_tab_tv"
        android:layout_below="@id/manager_top_center_line_view"
        android:layout_marginTop="@dimen/dm017"
        android:background="@color/color3ecc7a"></View>

    <TextView
        android:id="@+id/native_games_tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm117"
        android:clickable="true"
        android:paddingBottom="@dimen/dm028"
        android:paddingTop="@dimen/dm028"
        android:text="原生游戏"
        android:textColor="@color/manager_top_bt_text_seletor"
        android:textSize="@dimen/dm024"
        android:textStyle="bold" />

    <View
        android:id="@+id/native_games_tab_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm004"
        android:layout_alignLeft="@id/native_games_tab_tv"
        android:layout_alignRight="@id/native_games_tab_tv"
        android:layout_below="@id/manager_top_center_line_view"
        android:layout_marginTop="@dimen/dm017"
        android:background="@color/color3ecc7a"
        android:visibility="invisible"></View>

    <View
        android:id="@+id/manager_top_tab_buttom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_below="@id/cloud_games_tab_tv"
        android:background="@color/e6e6e6"></View>

    <!-- ________________________________________顶部分隔线__________________________________________________________ -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/manager_top_tab_buttom_line"
        android:background="@color/f5f5f5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm014"
            android:paddingRight="@dimen/dm034">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dm020"
                android:scaleType="centerInside"
                android:src="@drawable/ic_yingshe" />

            <TextView
                android:id="@+id/inject_server_connect_state_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/inject_server_state_off"
                android:textColor="@color/color999999"
                android:textSize="@dimen/dm020" />

            <Button
                android:id="@+id/inject_server_connect_bt"
                android:layout_width="@dimen/dm104"
                android:layout_height="@dimen/dm044"
                android:background="@drawable/selector_blue_bt_no_rectangle"
                android:gravity="center"
                android:text="@string/connect_inject_server"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />
        </LinearLayout>

        <include layout="@layout/layout_line_1px_e6e6e6"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm014"
            android:paddingRight="@dimen/dm034">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dm020"
                android:scaleType="centerInside"
                android:src="@drawable/ic_buletooth" />

            <TextView
                android:id="@+id/bluetooth_connect_state_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/bt_connect_off"
                android:textColor="@color/color999999"
                android:textSize="@dimen/dm020" />

            <Button
                android:id="@+id/bluetooth_connect_bt"
                android:layout_width="@dimen/dm104"
                android:layout_height="@dimen/dm044"
                android:background="@drawable/selector_blue_bt_no_rectangle"
                android:gravity="center"
                android:text="@string/connect_bluetooth"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />
        </LinearLayout>

        <include layout="@layout/layout_line_1px_e6e6e6"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm030"
            android:paddingTop="@dimen/dm030">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dm020"
                android:text="我的游戏"
                android:textColor="@color/color_1a"
                android:textSize="@dimen/dm026"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manager_add_game_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:paddingBottom="@dimen/dm008"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm036"
                android:paddingTop="@dimen/dm008"
                android:text="@string/add_game"
                android:textColor="@color/manager_add_bt_text_seletor"
                android:textSize="@dimen/dm024" />

        </RelativeLayout>

        <include layout="@layout/layout_line_1px_e6e6e6"></include>

        <ListView
            android:id="@+id/manager_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:divider="@color/e5e5e5"
            android:dividerHeight="@dimen/dm001"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm034"
            android:scrollbars="none"></ListView>

    </LinearLayout>

    <!-- ____________云适配__________ -->


    <ListView
        android:id="@+id/manager_cloud_lv"
        android:layout_width="fill_parent"
        android:divider="@color/e5e5e5"
        android:dividerHeight="@dimen/dm001"
        android:paddingLeft="@dimen/dm034"
        android:paddingRight="@dimen/dm034"
        android:scrollbars="none"
        android:layout_height="fill_parent"
        android:layout_below="@id/manager_top_tab_buttom_line"
        android:background="@color/white"></ListView>


    <TextView
        android:id="@+id/manager_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="列表为空"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/dm024"
        android:visibility="visible" />
</RelativeLayout>