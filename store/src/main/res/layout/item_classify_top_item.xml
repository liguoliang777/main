<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dm098"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_classify_top_bt"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/classify_item_iv"
        android:layout_width="@dimen/dm052"
        android:layout_height="@dimen/dm052"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm024"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/singer_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm020"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/dm024"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dm020"
        android:textStyle="bold" />
</LinearLayout>