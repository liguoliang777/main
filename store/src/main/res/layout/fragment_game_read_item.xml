<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_line_dp10_f5f5f5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical">

        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dm001"
            android:background="@color/mainColor" />

        <TextView
            android:id="@+id/strategy_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dm028"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/strategy_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_28"
        android:lineSpacingExtra="@dimen/dm008"
        android:text=""
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_14" />
</LinearLayout>