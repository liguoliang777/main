<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ngame="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_left_center"/>

    <cn.ngame.store.view.PullScrollView
        android:layout_width="match_parent"
        android:scrollbarFadeDuration="50"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm060"
                android:src="@drawable/ic_launcher"/>

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm035"
                android:scaleType="centerInside"
                android:src="@drawable/logo_blue"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm015"
                android:textColor="@color/color_1a"
                android:textSize="@dimen/dp_16"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="更新日期：2017.11.10"
                android:textColor="@color/color_1a"
                android:textSize="@dimen/dp_16"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dm060">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_26"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_about_jiantou"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_weight="1"
                    android:text="@string/about_text_line_1"
                    android:textColor="@color/color_1a"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
            <!--           2    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="26dp">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_26"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_about_jiantou"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_weight="1"
                    android:text="@string/about_text_line_2"
                    android:textColor="@color/color_1a"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
            <!--           3    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="26dp">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_26"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_about_jiantou"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_weight="1"
                    android:text="@string/about_text_line_3"
                    android:textColor="@color/color_1a"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
            <!--      4  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="26dp">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_26"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_about_jiantou"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dm100"
                    android:layout_weight="1"
                    android:text="@string/about_text_line_4"
                    android:textColor="@color/color_1a"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
        </LinearLayout>
    </cn.ngame.store.view.PullScrollView>
</RelativeLayout>