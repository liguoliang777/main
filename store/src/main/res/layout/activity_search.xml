<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--android:clipToPadding="false"-->
    <!--头部导航-->
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onSeachBackClick"
            android:paddingLeft="@dimen/dm032"
            android:paddingRight="@dimen/dm044"
            android:src="@drawable/ic_back" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dm015"
            android:layout_marginTop="@dimen/dm015"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_search"
            android:gravity="center"
            android:paddingLeft="@dimen/dm008">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dm008"
                android:padding="@dimen/dm006"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search_gray" />

            <ImageView
                android:id="@+id/but_fork"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dm016"
                android:paddingRight="@dimen/dm020"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search_delete"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/but_fork"
                android:layout_toRightOf="@+id/img_1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入游戏名字"
                android:imeActionLabel="搜索"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/cccccc"
                android:textSize="@dimen/dm028" />

        </RelativeLayout>


        <TextView
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="@dimen/dm032"
            android:paddingRight="@dimen/dm032"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/dm028" />
    </LinearLayout>
    <!--提示背景-->
    <cn.ngame.store.view.LoadStateView
        android:id="@+id/loadStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        ngame:end="@string/search_end"
        ngame:ing="@string/search_ing"
        ngame:visible="false" />
    <!--搜索后的结果列表-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_1"
        android:background="@color/white"
        android:divider="@color/e6e6e6"
        android:dividerHeight="@dimen/dm001"
        android:scrollbars="none"
        android:visibility="gone"></ListView>

    <LinearLayout
        android:id="@+id/ll_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listView"
        android:background="@color/f5f5f5"
        android:orientation="vertical">
        <!--搜索历史-->
        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/e6e6e6"
            android:orientation="vertical">

            <GridView
                android:id="@+id/gridView_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:listSelector="#00000000"
                android:numColumns="1"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/dm001"></GridView>

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm001"
                android:background="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/dm024"
                android:text="清空搜索历史"
                android:textColor="@color/color999999"
                android:textSize="@dimen/dm028" />

        </LinearLayout>
        <!--热门搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dm032"
                android:layout_marginLeft="@dimen/dm032"
                android:layout_marginTop="@dimen/dm050"
                android:text="热门搜索"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dm032" />

            <GridView
                android:id="@+id/gridView_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/e6e6e6"
                android:gravity="center_horizontal"
                android:listSelector="#00000000"
                android:numColumns="2"
                android:paddingBottom="@dimen/dm001"
                android:paddingRight="@dimen/dm_004"
                android:paddingTop="@dimen/dm001"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/dm001"></GridView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>