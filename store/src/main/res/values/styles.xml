<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme_NoActionBar_Fullscreen" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/img_welcome_0</item>
    </style>

    <style name="DownloadDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 星形评分空间样式 -->
    <style name="RatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_small</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="RatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_big</item>
    </style>

    <!--<style name="CommentDetailRatingCount">-->
    <!--<item name="android:progressDrawable">@drawable/shape_circle_blue_in_white</item>-->
    <!--<item name="android:minHeight">17dp</item>-->
    <!--<item name="android:maxHeight">36dp</item>-->
    <!--</style>-->

    <!-- 自定义checkBox样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_style</item>
    </style>


    <!-- PopUpMenu -->
    <style name="Animations" />

    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Center2">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="android:windowEnterAnimation">@anim/pump_top</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

    <!--首页dialog动画-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <!--标签tab 属性-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
    </style>

    <!--排行 一级标签tab 的属性-->
    <style name="Rank_Fragment_TabLayout" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/dm024</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--主界面未绑定对话框-->
    <style name="Dialog_From_Bottom_Style" parent="@android:style/Theme.Holo.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent_light2</item><!--dilog全屏-->
        <!--       <item name="android:backgroundDimEnabled">true</item>&lt;!&ndash; dim:模糊的 阴影效果 &ndash;&gt;-->
        <!-- <item name="android:backgroundDimEnabled">false</item>-->     <!-- Dialog以外的区域模糊效果 -->

        <!-- <item name="android:windowIsFloating">true</item>-->  <!-- 浮于Activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 半透明 -->
        <item name="android:colorBackground">@color/transparent_light2</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/Animation_Bottom</item>
    </style>

    <!-- 底部退出动画 -->
    <style name="Animation_Bottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottomdialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottomdialog_out</item>
    </style>

    <style name="activity_left_in_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="anim_rank_list_popup">
        <!--<item name="android:windowEnterAnimation">@anim/anim_popup_show</item>-->
        <item name="android:windowExitAnimation">@anim/anim_popup_dismiss</item>
    </style>

    <style name="style_14dp_989999">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_989999</item>
    </style>

    <!--进度条 -->
    <style name="NumberProgressBar_MyDef">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">@color/f5f5f5</item>
        <item name="progress_reached_color">@color/mainColor</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/mainColor</item>

        <item name="progress_reached_bar_height">@dimen/dm001</item>
        <item name="progress_unreached_bar_height">@dimen/dm001</item>
    </style>

<!--广告-->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <declare-styleable name="CountDownView">
        <attr name="background_color" format="color" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
    </declare-styleable>
</resources>
